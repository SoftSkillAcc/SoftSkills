<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/profession_selector_tv_header_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/professional_selector_margin"
        android:gravity="center"
        android:text="@string/profession_selector_tv_header_1_title"
        android:textSize="@dimen/professional_selector_tv_header_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/professional_selector_tv_header_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/professional_selector_margin"
        android:gravity="center"
        android:text="@string/professional_selector_tv_header_2_title"
        android:textSize="@dimen/professional_selector_tv_header_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profession_selector_tv_header_1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profession_selector_rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/professional_selector_rv_height"
        android:layout_marginTop="@dimen/professional_selector_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/professional_selector_tv_header_2" />
</androidx.constraintlayout.widget.ConstraintLayout>